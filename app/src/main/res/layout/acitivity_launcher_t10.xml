<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/icon_t10_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="30dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:divider="@drawable/shape_linearlayout_divider_home"
        android:orientation="horizontal"
        android:showDividers="middle">

        <FrameLayout
            android:id="@+id/fl_dvr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/selector_t10_dvr" />

            <TextView
                android:id="@+id/tv_dvr"
                style="@style/HomeBtnTitleStyle"
                android:layout_gravity="center_horizontal|bottom"
                android:includeFontPadding="false"
                android:lineSpacingMultiplier="0.7" />

            <ImageView
                android:id="@+id/iv_record_state"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="right"
                android:layout_margin="8dp"
                android:src="@drawable/ic_recording"
                android:visibility="gone" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_cloud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/selector_t10_cloud" />

            <TextView
                android:id="@+id/tv_cloud"
                style="@style/HomeBtnTitleStyle"
                android:layout_gravity="center_horizontal|bottom"
                android:includeFontPadding="false"
                android:lineSpacingMultiplier="0.7" />

            <TextView
                style="@style/HomeBtnTitleStyle"
                android:layout_gravity="center_horizontal|bottom"
                android:gravity="center"
                android:includeFontPadding="false" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_fm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/selector_t10_fm" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_fm"
                    style="@style/HomeBtnTitleStyle" />
            </LinearLayout>

        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_weight="1"
        android:divider="@drawable/shape_linearlayout_divider_home"
        android:orientation="horizontal"
        android:showDividers="middle">

        <FrameLayout
            android:id="@+id/fl_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/selector_t10_map" />

            <TextView
                android:id="@+id/tv_map"
                style="@style/HomeBtnTitleStyle"
                android:layout_gravity="center_horizontal|bottom"
                android:includeFontPadding="false"
                android:lineSpacingMultiplier="0.7" />

            <!--            <TextView
                            style="@style/HomeBtnTitleStyle"
                            android:layout_gravity="center_horizontal|bottom"
                            android:layout_marginBottom="2dp"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:text="@string/maps_t10" />-->
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_music"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/selector_t10_music" />

            <TextView
                android:id="@+id/tv_music"
                style="@style/HomeBtnTitleStyle"
                android:layout_gravity="center_horizontal|bottom" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/selector_t10_app" />

            <TextView
                android:id="@+id/tv_app"
                style="@style/HomeBtnTitleStyle"
                android:layout_gravity="center_horizontal|bottom" />
        </FrameLayout>
    </LinearLayout>
</LinearLayout>